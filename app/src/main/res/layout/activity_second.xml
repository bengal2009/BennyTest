<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.blin.bennytest.SecondActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogue"
        android:id="@+id/DiaBut"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:onClick="ShowDia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InputDia"
        android:id="@+id/button"
        android:onClick="ShowDia1"
        android:layout_alignTop="@+id/DiaBut"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strart Sev"
        android:id="@+id/StSvc"
        android:onClick="StService"
        android:layout_below="@+id/DiaBut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Sev"
        android:id="@+id/StpSvc"
        android:onClick="StopSvc"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_below="@+id/StSvc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp"
        android:minHeight="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet"
        android:id="@+id/IntTest"
        android:onClick="RDINT"
        android:layout_above="@+id/StpSvc"
        android:layout_toRightOf="@+id/StpSvc"
        android:layout_toEndOf="@+id/StpSvc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowDir"
        android:id="@+id/SHDIR"
        android:onClick="ShowDirect"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button" />

</RelativeLayout>
